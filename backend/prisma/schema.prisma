generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  journals  Journal[]
}

model Journal {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  mood      String?   // optional: user can store a mood like "Happy", "Sad", "Neutral"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation
  user   User @relation(fields: [userId], references: [id])
  userId Int
}

